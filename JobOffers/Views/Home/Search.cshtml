@model IEnumerable<JobOffers.Models.Job>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Result</h2>

<section class="jumbotron jumb">

    <div class="row">
        @if (Model.Count() == 0)
        {
            <p>No Search Results</p>
        }
        else
        {
            foreach (var job in Model)
            {
                <div class="col-md-3">
                    <div class="card mt-4">
                        <div class="card-img-top img-thumbnail" style="height: 180px;">
                            <img src="~/Uploads/@job.ImageUrl" class="img-fluid" />
                        </div>
                        <div class="card-header">@job.JobTitle</div>
                        <div class="card-body">@job.JobDescription</div>
                        @Html.ActionLink("Details", "Details", "Job", new { id = job.Id }, new { @class = "btn btn-info" })
                    </div>
                </div>
            }
        }
    </div>
</section>
