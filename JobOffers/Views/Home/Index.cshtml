@model IEnumerable<JobOffers.Models.JobCategory>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="owl-carousel owl-theme">
    <div class="item">
        <img src="~/Images/black-and-white-image-of-colleagues-standing-in-office-and-looking-at-city-view-through-window.jpg" alt="" />
    </div>

    <div class="item">
        <img src="~/Images/businessmen-on-street-bw.jpg" alt="" />
    </div>

    <div class="item">
        <img src="~/Images/man-sitting-on-sofa-and-using-computer.jpg" alt="" />
    </div>

    <div class="item">
        <img src="~/Images/officer-professional-wireless.jpg" alt="" />
    </div>

    <div class="item">
        <img src="~/Images/wooden-shelf-with-laptop-and-notebook.jpg" alt="" />
    </div>

    <div class="item">
        <img src="~/Images/young-man-sitting-at-desk-using-laptop-and-writing-in-notebook.jpg" alt="" />
    </div>

</div>

@foreach (var category in Model)
{

    <h3>@category.Name</h3>

    <div class="row">
        @foreach (var job in category.Jobs)
        {
            <div class="col-md-3">

                <div class="card mt-4">
                    <img src="~/Uploads/@job.ImageUrl" class="card-img-top img-thumbnail" />

                    <div class="card-body">
                        <h4 class="card-title">@job.JobTitle</h4>
                        <div class="card-text">@job.JobDescription</div>
                        @Html.ActionLink("Details", "Details", "Job", new { id = job.Id }, new { @class = "btn btn-info" })
                    </div>
                </div>
            </div>

            <hr />
        }
    </div>

}

@section scripts 
{
    <script>
        var owl = $('.owl-carousel');

        owl.owlCarousel({
            items: 4,
            loop: true,
            margin: 10,
            autoplay: true,
            autoplayTimeout: 1000,
            autoplayHoverPause: true
        });
        $('.play').on('click', function () {
            owl.trigger('play.owl.autoplay', [1000])
        })
        $('.stop').on('click', function () {
            owl.trigger('stop.owl.autoplay')
        })
    </script>
}