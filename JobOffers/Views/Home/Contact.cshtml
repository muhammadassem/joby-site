@model JobOffers.ViewModels.ContactViewModel
@{
    ViewBag.Title = "Contact";
}

@using (Html.BeginForm("Contact", "Home", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="alert alert-@ViewBag.EmailMessageType alert-dismissible">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        @ViewBag.EmailMessage
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Subject)
        @Html.TextBoxFor(m => m.Subject, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Subject, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Message)
        @Html.TextAreaFor(m => m.Message, new { @class = "form-control", @id = "ckedit" })
        @Html.ValidationMessageFor(m => m.Message, null, new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
}

@section Scripts
{
    <script>
        CKEDITOR.replace("ckedit");
    </script>
}